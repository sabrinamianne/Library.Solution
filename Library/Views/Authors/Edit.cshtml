@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row justify-content-around">
    <div class="col-md-12">
      <h1>Edit Author</h1><br><br>
      <form action="/authors/@Model.GetId()" method="post">
        <label for="newName">New Name</label>
        <input type="text" name="newName" value="@Model.GetName()">
        <button type="submit">Edit</button>   
    </div>
  </div>
</div>
