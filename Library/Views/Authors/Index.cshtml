@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row justify-content-around">
    <div class="col-md-12">
      <h1>List of All Authors</h1><br><br>
      @if (@Model.Count == 0)
      {
        <h2>No Authors Registred</h2>
      }

      @foreach (var author in Model)
      {
          <h2><a href='authors/@author.GetId()'>@author.GetName()</a></h2>
          <form action="authors/@author.GetId()/delete" method="post">
            <button class="button_delete" type="submit" name="button">Delete @author.GetName()</button><br><br>
          </form>
      }
      <br><br><h2><a href='/authors/new'>Add an Autor</a><?h2>
          <h2><a href='/librarians'>My Interface</a></h2>
      <h2><a href='/'>Home</a></h2>
    </div>
  </div>
</div>
