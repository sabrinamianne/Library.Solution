@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row justify-content-around">
    <div class="col-md-12">
      <h1>Index Book</h1><br><br>
      @if (@Model.Count == 0)
      {
        <h2>No Books Registred</h2>
      }

      @foreach (var book in Model)
      {
        <ol>
          <h2><a href='books/@book.GetId()'>@book.GetName()</a></h2>
          <form action="books/@book.GetId()/delete" method="post">
          <button class="button_delete" type="submit" name="button">Delete @book.GetName()</button><br>
        </ol>
      }
      <br><br><h2><a href='/books/new'>Add a new Book</a></h2>
      <h2><a href='/librarians'>My Interface</a></h2>
      <h2><a href='/'>Home</a></h2>
    </div>
  </div>
</div>
